menuconfig SWITCH
	tristate "Switch class support"
	help
	  Say Y here to enable switch class support. This allows
	  monitoring switches by userspace via sysfs and uevent.

if SWITCH

config SWITCH_GPIO
	tristate "GPIO Swith support"
	depends on GPIOLIB
	help
	  Say Y here to enable GPIO based switch support.

config SWITCH_ARIZONA
	tristate "Wolfson Arizona Switch support"
	depends on MFD_ARIZONA && INPUT && SND_SOC
	help
	  Say Y here to enable support for external accessory detection
	  with Wolfson Arizona devices. These are audio CODECs with
	  advanced audio accessory detection support.

endif # SWITCH

config INPUT_IM401
	tristate "Fortemeida IM401 voice trigger IC support"
	depends on MACH_LGE
	default n
	help
	  This option enables device driver support for IM401, a voice trigger IC.

	  To compile this driver as module, choose M here: the
	  module will be called i2c_im401.
